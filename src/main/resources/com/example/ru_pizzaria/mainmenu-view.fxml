<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" prefHeight="396.0" prefWidth="628.0" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.ru_pizzaria.MainMenuController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label fx:id="welcomeText" text="Welcome to RU Pizzaria!">
      <font>
         <Font name="Britannic Bold" size="34.0" />
      </font></Label>
   <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="50.0">
      <children>
         <StackPane alignment="BASELINE_CENTER" prefHeight="150.0" prefWidth="200.0">
            <children>
               <ImageView fitHeight="150.0" fitWidth="200.0" onMouseClicked="#onMakeOrderButtonClick" pickOnBounds="true" preserveRatio="true">
                  <image>
                     <Image url="@../../../images/createOrderIcon.png" />
                  </image>
               </ImageView>
               <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="27.0" prefWidth="130.0" style="-fx-background-color: FFFF;" text="Create an Order">
                  <font>
                     <Font name="Cambria" size="18.0" />
                  </font>
               </Label>
            </children>
         </StackPane>
         <StackPane alignment="BOTTOM_CENTER" prefHeight="150.0" prefWidth="200.0">
            <children>
               <ImageView fitHeight="150.0" fitWidth="200.0" onMouseClicked="#onManageOrdersButtonClick" pickOnBounds="true" preserveRatio="true">
                  <image>
                     <Image url="@../../../images/manageOrdersIcon.png" />
                  </image>
               </ImageView>
               <Label style="-fx-background-color: FFFF;" text="Manage Orders">
                  <font>
                     <Font name="Cambria" size="18.0" />
                  </font>
               </Label>
            </children>
         </StackPane>
      </children>
   </HBox>
</VBox>
