<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.ru_pizzaria.PremadePizzaController">
   <children>
      <GridPane layoutX="55.0" layoutY="35.0" prefHeight="329.0" prefWidth="490.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints maxHeight="183.4" minHeight="10.0" prefHeight="162.4" vgrow="SOMETIMES" />
          <RowConstraints maxHeight="105.4" minHeight="10.0" prefHeight="58.400000000000006" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <VBox alignment="CENTER_LEFT" prefHeight="200.0" prefWidth="100.0" GridPane.rowIndex="1">
               <children>
                  <RadioButton fx:id="rb_smallPizza" contentDisplay="CENTER" mnemonicParsing="false" text="Small" />
                  <RadioButton fx:id="rb_mediumPizza" mnemonicParsing="false" text="Medium" />
                  <RadioButton fx:id="rb_largePizza" mnemonicParsing="false" text="Large" />
               </children>
            </VBox>
            <HBox alignment="BOTTOM_RIGHT" prefHeight="100.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="2">
               <children>
                  <Button fx:id="b_addpizza" mnemonicParsing="false" onAction="#onAddPizzaClick" text="Add pizza" />
               </children>
            </HBox>
            <HBox alignment="TOP_CENTER" prefHeight="100.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Pizza price:">
                     <HBox.margin>
                        <Insets right="5.0" />
                     </HBox.margin></Text>
                  <TextField prefHeight="26.0" prefWidth="87.0" />
               </children>
            </HBox>
            <VBox alignment="CENTER_LEFT" prefHeight="200.0" prefWidth="100.0">
               <children>
                  <HBox alignment="CENTER_LEFT" prefHeight="35.0" prefWidth="246.0">
                     <children>
                        <RadioButton fx:id="rb_chicago" mnemonicParsing="false" text="Chicago">
                           <HBox.margin>
                              <Insets right="20.0" />
                           </HBox.margin>
                        </RadioButton>
                        <RadioButton fx:id="rb_ny" mnemonicParsing="false" text="New York" />
                     </children>
                  </HBox>
                  <ComboBox fx:id="cb_pizzaType" prefHeight="26.0" prefWidth="203.0" promptText="Choose a premade pizza type">
                     <VBox.margin>
                        <Insets top="50.0" />
                     </VBox.margin></ComboBox>
               </children></VBox>
         </children>
      </GridPane>
   </children>
</AnchorPane>
