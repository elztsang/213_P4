                  <HBox alignment="CENTER_RIGHT" prefHeight="39.0" prefWidth="361.0" spacing="5.0">
                     <children>
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Crust: " />
                        <TextField fx:id="tf_crustStyle" editable="false" />
                     </children>
                  </HBox>
                  <TextArea fx:id="ta_premadeToppings" prefHeight="40.0" prefWidth="246.0" />
                  <HBox alignment="CENTER_RIGHT" prefHeight="47.0" prefWidth="246.0">
                     <children>
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Pizza price:">
                           <HBox.margin>
                              <Insets right="5.0" />
                           </HBox.margin>
                        </Text>
                        <TextField fx:id="tf_pizzaPriceOut" prefHeight="26.0" prefWidth="87.0" />
                     </children>
                  </HBox>
               </children>
            </VBox>
            <HBox alignment="TOP_RIGHT" prefHeight="100.0" prefWidth="200.0" GridPane.columnIndex="1">
               <children>
                  <ImageView fx:id="iv_premadeImage" fitHeight="176.0" fitWidth="288.0" pickOnBounds="true" preserveRatio="true" />
               </children>
            </HBox>
         </children>
      </GridPane>
   </children>
</AnchorPane>
