<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="401.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.ru_pizzaria.CreateOrderController">
   <children>
      <VBox alignment="CENTER" layoutX="44.0" layoutY="28.0" prefHeight="344.0" prefWidth="511.0">
         <children>
            <HBox prefHeight="44.0" prefWidth="511.0">
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Order Number:">
                     <font>
                        <Font size="14.0" />
                     </font>
                     <HBox.margin>
                        <Insets right="5.0" />
                     </HBox.margin>
                  </Text>
                  <TextField fx:id="tf_orderNumber" editable="false" prefHeight="26.0" prefWidth="39.0" />
               </children>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <VBox.margin>
                  <Insets bottom="5.0" />
               </VBox.margin>
            </HBox>
            <ListView fx:id="lv_currentOrder" prefHeight="129.0" prefWidth="511.0" />
            <HBox alignment="CENTER" prefHeight="108.0" prefWidth="511.0">
               <children>
                  <Button fx:id="b_premadePizza" mnemonicParsing="false" onAction="#onPremadePizzaClick" text="Create premade">
                     <HBox.margin>
                        <Insets right="30.0" />
                     </HBox.margin></Button>
                  <Button fx:id="b_byoPizza" alignment="CENTER_RIGHT" mnemonicParsing="false" onAction="#onBYOPizzaClick" text="Build your own pizza" />
               </children>
            </HBox>
            <GridPane prefHeight="138.0" prefWidth="511.0">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Total:">
                           <HBox.margin>
                              <Insets right="10.0" />
                           </HBox.margin></Text>
                        <TextField fx:id="tf_total" editable="false" prefHeight="26.0" prefWidth="122.0" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" GridPane.rowIndex="1">
                     <children>
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Sales tax:">
                           <HBox.margin>
                              <Insets right="10.0" />
                           </HBox.margin></Text>
                        <TextField fx:id="tf_salestax" editable="false" prefHeight="26.0" prefWidth="121.0" />
                     </children></HBox>
                  <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" GridPane.rowIndex="2">
                     <children>
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Order total:">
                           <HBox.margin>
                              <Insets right="10.0" />
                           </HBox.margin>
                        </Text>
                        <TextField fx:id="tf_ordertotal" editable="false" prefHeight="26.0" prefWidth="109.0" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" GridPane.columnIndex="1">
                     <children>
                        <Button mnemonicParsing="false" onAction="#onRemovePizzaClick" text="Remove pizza" />
                     </children>
                  </HBox>
                  <HBox alignment="BOTTOM_RIGHT" prefHeight="100.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="2">
                     <children>
                        <Button mnemonicParsing="false" onAction="#onAddOrderClick" text="Place order" />
                     </children>
                  </HBox>
               </children>
            </GridPane>
         </children>
      </VBox>
   </children>
</AnchorPane>
